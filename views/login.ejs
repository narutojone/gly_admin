<!DOCTYPE html>
<html>
  <head>
	<% include ./partials/head %>
  </head>
  <body>
    <main>
    <div class="container">
  	<% if (message && message.success) { %>
  		<div class="alert alert-success"><%= message.success %></div>
  	<% } else if (message && message.error) { %>
  		<div class="alert alert-danger"><%= message.error %></div>
	<% } else if (message && message.warning) { %>
  		<div class="alert alert-warning"><%= message.warning %></div>
  	<% } %>
	<form method="POST" style="margin-left: 10; margin-right: 10;">
	  <legend>Login</legend>
	  <div class="form-group">
	    <label for="username">Username</label>
	    <input type="text" name="username" value="" placeholder="Username" autofocus="autofocus" class="form-control"/>
	  </div>
	  <div class="form-group">
	    <label for="password">Password</label>
	    <input type="password" name="password" value="" placeholder="Password" class="form-control"/>
	  </div>
	  <div class="form-group">
	    <button type="submit" class="btn btn-primary">Submit</button>
	  </div>
	</form>
	</div>
	</main>
	<footer>
	  <% include ./partials/footer %>
	</footer>
  </body>
</html>
